{% extends 'admin.base.html.twig' %}


{% block body %}
<div class="container-fluid">
    {% if success %}
        <div class="alert alert-success">{{ success }}</div>
    {% endif %}

    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    <div class="row">
        <div class="col-lg-12">
            <div class="block">
                <div class="title"><strong class="d-block">Viewing profile for</strong><span class="d-block">{{ user.firstname }} {{ user.lastname }}</span>
                </div>
                <div class="block-body">
                    <form class="form-horizontal" method='post' action=''>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">ID</label>
                            <div class="col-sm-9">
                                <input id="inputHorizontalSuccess" value="{{ user.id }}" readonly type="text" name='id'
                                       placeholder="" required class="form-control form-control-success">
                                <small class="form - text"></small>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">First Name</label>
                            <div class="col-sm-4">
                                <input id="inputHorizontalSuccess" value="{{ user.firstName }}" type="text"
                                       name='firstName' placeholder="" required
                                       class="form-control form-control-success">
                                <small class="form-text"></small>
                            </div>
                            <label class="col-sm-1 form-control-label">Last Name</label>
                            <div class="col-sm-4">
                                <input id="inputHorizontalSuccess" value="{{ user.lastName }}" type="text"
                                       name='lastName' placeholder="" required
                                       class="form-control form-control-success">
                                <small class="form-text"></small>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">Username</label>
                            <div class="col-sm-9">
                                <input id="inputHorizontalWarning" value="{{ user.username }}" type="text"
                                       name='newUsername' placeholder="" required
                                       class="form-control form-control-warning">
                                <small class="form-text"></small>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">Email</label>
                            <div class="col-sm-9">
                                <input id="inputHorizontalWarning" value="{{ user.email }}" type="email"
                                       name='email' placeholder="" required class="form-control form-control-warning">
                                <small class="form-text"></small>
                            </div>
                        </div>
                        <hr>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">Sub User?</label>
                            <div class="col-sm-3">
                                <input id="inputHorizontalWarning" value="{% if user.subUser == 1 %} Yes {% else %} No {% endif %}" type="text"
                                       placeholder="" readonly class="form-control form-control-warning">
                                <small class="form-text"></small>
                            </div>
                            <br>
                            <label class="col-sm-3 form-control-label">Sub user for user with id: {% if user.subUser == 1 %} <a href="/admin/users/{{ user.subUserFor }}"> {{ user.subUserFor }} </a> {% else %} NA {% endif %}</label>
                            <div class="col-sm-3">

                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-3">
                                <input type="submit" value="Update" class="btn btn-primary">
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            </div>
        </div>
        <hr>
        {% endblock %}
