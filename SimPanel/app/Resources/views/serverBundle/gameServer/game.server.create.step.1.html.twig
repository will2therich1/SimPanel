{% extends 'admin.base.html.twig' %}


{% block body %}

    <div class="container-fluid">
    {% if success %}
        <div class="alert alert-success">{{ success }}</div>
    {% endif %}

    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    <div class="row">
        <form action = '' method = 'POST' >
        <div class="col-md-12" >
            <div class="block">
            <div class="form-group">
                <label style="color:white;"> Create Server Using The Default Settings For</label>
                <br>
                <input type="text" name="action" value="defaultSettings" style="display: none;">
                <select name="serverDefault" id="STE" style="width: 100%;" class="custom-select">
                    {% for default in defaults %}
                    <option value="{{ default.id }}" >{{ default.gameName }} - {{ default.templateId }}</option>
                    {% endfor %}
                </select>

                <br>

                <label style="color:white;"> Who will own the server?</label>
                <br>
                <select name="user" id="STE" style="width: 100%;" class="custom-select">
                    {% for user in users %}
                        <option value="{{ user.id }}" >{{ user.firstName }} {{ user.lastName }} - {{ user.username }}</option>
                    {% endfor %}
                </select>
            </div >
            </div>
        </div >

    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="block">

            <button type = "submit" class="btn btn-info btn-fill pull-right" > Next Step </button >
            <div class="clearfix" ></div >
        </form >
            </div>
        </div>
    </div>
    <hr>

    <div class="row">
        <form action = '' method = 'POST' >
            <div class="col-md-12" >
                <div class="block">
                <div class="form-group">
                    <label style="color:white;"> Create Server From A Template</label>
                    <br>
                    <input type="text" name="action" value="templateCreation" style="display: none;">

                    <select name="template" id="STE" style="width: 100%;" class="custom-select">
                        {% for template in templates %}
                            <option value="{{ template.id }}" >{{ template.templateName }} - {{ template.id }}</option>
                        {% endfor %}
                    </select>

                    <br>

                    <label style="color:white;"> Who will own the server?</label>
                    <br>
                    <select name="user" id="STE" style="width: 100%;" class="custom-select">
                        {% for user in users %}
                            <option value="{{ user.id }}" >{{ user.firstName }} {{ user.lastName }} - {{ user.username }}</option>
                        {% endfor %}
                    </select>
                </div >
                </div>
            </div >

    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="block">

            <button type = "submit" class="btn btn-info btn-fill pull-right" > Next Step </button >
            <div class="clearfix" ></div >
            </form >
        </div>
    </div>
    </div>




{% endblock %}