{% extends 'admin.base.html.twig' %}


{% block body %}
    <div class="container-fluid">
        {% if success %}
            <div class="alert alert-success">{{ success }}</div>
        {% endif %}

        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}

        <div class="row">
            <hr>
            <div class="col-lg-12">
                <div class="block">
                    <div class="title"><strong class="d-block">Create a User</strong><span
                                class="d-block">Add a users</span></div>
                    <div class="block-body">
                        <form class="form-horizontal" method='post' action='{{ path('CreateUser') }}'>
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">First Name</label>
                                <div class="col-sm-9">
                                    <input id="inputHorizontalSuccess" type="text" name='firstName' placeholder="" required
                                           class="form-control form-control-success">
                                    <small class="form-text"></small>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">Last Name</label>
                                <div class="col-sm-9">
                                    <input id="inputHorizontalSuccess" type="text" name='lastName' placeholder="" required
                                           class="form-control form-control-success">
                                    <small class="form-text"></small>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">Username</label>
                                <div class="col-sm-9">
                                    <input id="inputHorizontalWarning" type="text" name='newUserUsername' placeholder=""
                                           required class="form-control form-control-warning">
                                    <small class="form-text"></small>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">Email</label>
                                <div class="col-sm-9">
                                    <input id="inputHorizontalWarning" type="email" name='email' placeholder="" required
                                           class="form-control form-control-warning">
                                    <small class="form-text"></small>
                                </div>
                            </div>
                            {#<div class="form-group row">#}
                                {#<label class="col-sm-3 form-control-label">Company</label>#}
                                {#<div class="col-sm-9">#}
                                    {#<input id="inputHorizontalWarning" type="text" name='company' placeholder=""#}
                                           {#class="form-control form-control-warning">#}
                                    {#<small class="form-text"></small>#}
                                {#</div>#}
                            {#</div>#}
                            {#<div class="form-group row">#}
                                {#<label class="col-sm-3 form-control-label">Notes</label>#}
                                {#<div class="col-sm-9">#}
                                    {#<input id="inputHorizontalWarning" type="text" name='adminnotes' placeholder=""#}
                                           {#class="form-control form-control-warning">#}
                                    {#<small class="form-text"></small>#}
                                {#</div>#}
                            {#</div>#}
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">Password <i>If left blank this will be auto
                                        generated and emailed out</i></label>
                                <div class="col-sm-9">
                                    <input id="inputHorizontalWarning" type="password" name='newUserPassword' placeholder=""
                                           class="form-control form-control-warning">
                                    <small class="form-text"></small>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">Confirm Password</label>
                                <div class="col-sm-9">
                                    <input id="inputHorizontalWarning" type="password" name='newUserPassword-2' placeholder=""
                                           class="form-control form-control-warning">
                                    <small class="form-text"></small>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-9 offset-sm-3">
                                    <input type="submit" value="Create" class="btn btn-primary">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

    <hr>
{% endblock %}
