{% extends 'admin.base.html.twig' %}


{% block body %}

        <div class="col-lg-10">
            {% if success %}
                <div class="alert alert-success">{{ success }}</div>
            {% endif %}

            {% if error %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endif %}
            <div class="block">
                <div class="title"><strong class="d-block">Viewing Network Server {{ server.id }} </strong><span class="d-block"></span>
                </div>
                <div class="block-body">
                    <form class="form-horizontal" method='post' action=''>
                        <div class="form-group row
                        ">
                        <label class="col-sm-3 form-control-label">Name</label>
                        <div class="col-sm-9">
                            <input id="inputHorizontalSuccess" value="{{ server.name }}" type="text" name='name' placeholder="" required
                                   class="form-control form-control-success">
                            <small class="form-text"></small>
                        </div>
                </div>
                <div class="form-group row
                ">
                <label class="col-sm-3 form-control-label">Server Login Name</label>
                <div class="col-sm-9">
                    <input id="inputHorizontalWarning" type="text"  value="{{ server.loginUser }}" name='login_name' placeholder="" required
                           class="form-control form-control-warning">
                    <small class="form-text"></small>
                </div>
            </div>
            <div class="form-group row
            ">
            <label class="col-sm-3 form-control-label">FTP port</label>
            <div class="col-sm-9">
                <input id="inputHorizontalWarning" value="{{ server.port }}" type="text" name='ftp_port' placeholder="" required
                       class="form-control form-control-warning">
                <small class="form-text"></small>
            </div>
        </div>
        <div class="form-group row
        ">
        <label class="col-sm-3 form-control-label">Server IP</label>
        <div class="col-sm-9">
            <input id="inputHorizontalWarning" value="{{ server.ip }}" type="text" name='ip' placeholder="" required class="form-control
                   form-control-warning">
            <small class="form-text"></small>
        </div>
    </div>
    <div class="form-group row">
    <label class="col-sm-3 form-control-label">SSH Private Key</label>
    <div class="col-sm-9">
        <textarea rows="5" class="form-control" name='ssh_private_key' readonly placeholder="Key provided when installing the daemon" value="">Unable to view after server creation for security reasons</textarea>                        </div>
    </div>
    </div>
    <div class="form-group row">
    <label class="col-sm-3 form-control-label">Private Key's Password (If Set)</label>
    <div class="col-sm-9">
        <input id="inputHorizontalWarning" type="password" readonly name='ssh_private_key_password' placeholder=""
               class="form-control form-control-warning">
        <small class="form-text"></small>
    </div>
    </div>
    <div class="form-group row">
    <div class="col-sm-9 offset-sm-3">
    <input type="submit" value="Update Server" class="btn btn-primary">
    </div>
    </div>
    </form>
    </div>
    </div>
    </div>
    </div>
    <hr>
{% endblock %}