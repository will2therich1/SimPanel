{% extends 'admin.base.html.twig' %}


{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="block">
                    <div class="title"><strong class="d-block">Search Users</strong><span class="d-block">Search for users</span></div>
                    <div class="block-body">
                        <form class="form-horizontal" method='get' action='./users'>
                            <div class="form-group row">
                            <label class="col-sm-3 form-control-label">Name</label>
                            <div class="col-sm-9">
                                <input id="inputHorizontalSuccess" type="text" name='name' placeholder="Name" class="form-control form-control-success"><small class="form-text"></small>
                            </div>
                    </div>
                    <div class="form-group row">
                    <label class="col-sm-3 form-control-label">ID</label>
                    <div class="col-sm-9">
                        <input id="inputHorizontalWarning" type="text" name='id' placeholder="ID" class="form-control form-control-warning"><small class="form-text"></small>
                    </div>
                </div>
                <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Search" class="btn btn-primary">
            </div>
        </div>
        </form>
    </div>
    </div>
    </div>
    <hr>
    <div class="col-lg-12">
        <div class="block">
            <div class="content table-responsive table-full-width">
            <table style='color: white' class="table table-striped table-hover">
            <thead>
                <th>ID</th>
                <th>Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Status</th>
                <th>Edit</th>
            </thead>
            <tbody>
            {% for user in users %}
            <tr>
                    <th scope="row">{{ user.id|e }}</th>
                    <th>{{ user.firstname|e }} {{ user.lastname|e }}</th>
                    <th>{{ user.username|e }}</th>
                    <th>{{ user.email|e }}</th>
                {%   if user.status == 1 %}
                <th><a href='./users/{{ user.id|e }}/deactivate' >
                    Active
                {% else %}
                <th><a href='./users/{{ user.id|e }}/activate' >
                    Deactive
                {% endif %}
                        </a></th>
                    <th><a href='./users/{{ user.id|e }}'>Edit</a></th>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        </div>
    </div>
    </div>
    </div>
    <hr>

    <div class='button-bar'>
        <a href="{{ path('UserAdmin') }}" class='button prev'>First Page</a>&nbsp;&nbsp;&nbsp;&nbsp
        <a href='{{ pages.lastlink }}' class='button prev'>Previous</a>
        <a href='{{ pages.nextlink }}' class='button next'>Next</a>
    </div>
            {% endblock %}
