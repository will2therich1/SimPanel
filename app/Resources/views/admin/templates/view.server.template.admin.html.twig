{% extends 'admin.base.html.twig' %}


{% block body %}

    <div class="col-lg-10">
        {% if success %}
            <div class="alert alert-success">{{ success }}</div>
        {% endif %}

        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}
        <div class="block">
            <div class="title"><strong class="d-block">Viewing Game Server Template {{ serverTemplate.data.id }}</strong><span class="d-block">Making a new Game Server Template</span>
            </div>
            <div class="block-body">
                <form class="form-horizontal" method='post' action=''>
                    <div class="form-group row
                        ">
                        <label class="col-sm-3 form-control-label">Template Name</label>
                        <div class="col-sm-9">
                            <input id="inputHorizontalSuccess" type="text" name='name' placeholder="" required
                                   class="form-control form-control-success" value="{{ serverTemplate.data.templateName }}">
                            <small class="form-text"></small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 form-control-label">Server Created On:</label>
                        <div class="col-sm-9">
                            <select required style="width:100%" disabled name="networkSelect" class="custom-select" data-live-search="true">
                                    <option value="{{ serverTemplate.server.id }}">{{ serverTemplate.server.name }} ({{ serverTemplate.server.ip }})</option>
                            </select>


                            <small class="form-text"></small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 form-control-label">Server CMD ID</label>
                        <div class="col-sm-9">
                            <input id="inputHorizontalWarning" type="text" readonly value="{{ serverTemplate.data.steamName }}" name='steamCmdId' placeholder="" required class="form-control
                   form-control-warning">
                            <small class="form-text"></small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 form-control-label">Template Size</label>
                        <div class="col-sm-9">
                            <input id="inputHorizontalWarning" type="text" readonly value="{{ serverTemplate.data.size }}" name='templateSize' placeholder="" required class="form-control
                   form-control-warning">
                            <small class="form-text"></small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 form-control-label">Template Location</label>
                        <div class="col-sm-9">
                            <input id="inputHorizontalWarning" type="text" readonly value="{{ serverTemplate.data.location }}" name='templateLocation' placeholder="" required class="form-control
                   form-control-warning">
                            <small class="form-text"></small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 form-control-label">Template Description</label>
                        <div class="col-sm-9">
                            <textarea rows="5" class="form-control" name='template_description'  value=""></textarea>                        </div>
                    </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">
                    <input type="submit" value="Save Template Basic Settings" class="btn btn-primary">
                </div>
            </div>
            </form>

            <form action="" method="post">
                <div class="form-group row" style="display: none">
                    <label class="col-sm-3 form-control-label">Template Location</label>
                    <div class="col-sm-9">
                        <input id="inputHorizontalWarning" type="text"  readonly value="True" name='deleteServer'  class="form-control
                   form-control-warning">
                        <small class="form-text"></small>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-9 offset-sm-3">
                        <input type="submit" value="Delete Template" class="btn btn-outline-danger">
                    </div>
                </div>
            </form>

        </div>
    </div>
    </div>
    </div>
    <hr>
{% endblock %}