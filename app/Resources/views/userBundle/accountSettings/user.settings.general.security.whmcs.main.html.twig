{% extends 'userBundle/accountSettings/user.settings.base.html.twig' %}


{% block stylesheets %}
    <style>
        .offline {
            background: #f00;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            display: inline-block;
        }
        .online {
            background: lawngreen;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            display: inline-block;
        }

    </style>


{% endblock %}



{% block tabBody %}

                    <div class="uk-card-header">
                        <h3>WHMCS Integration setup</h3>
                    </div>
                    <div class="uk-card-content" style="color: white">
                        <br>
                        {% if error is defined %}
                                <div class="uk-alert uk-alert-danger" data-uk-alert>
                                    {{ error }}
                                    <a href="#" class="uk-alert-close uk-close"></a>
                                    <p></p>
                                </div>
                            {%  endif %}

                        {% if success is defined %}
                            <div class="uk-alert uk-alert-success" data-uk-alert>
                                {{ success }}
                                <a href="#" class="uk-alert-close uk-close"></a>
                                <p></p>
                            </div>
                        {%  endif %}

                        <form class="uk-form-stacked" method="post">
                            <div uk-grid>
                            <div class="uk-width-1-1">
                                <form action="" method="post">
                                <div>
                                    {% if whmcsSettings.whmcs_status == 1 %}
                                        {% if whmcsUser.enabled == 1 %}
                                    <form action="" method="post">
                                        <div>
                                            <div class="uk-grid">
                                                <div class="uk-width-1-1">
                                                    <p>You have linked your WHMCS account</p>
                                                    <label for="currentPassword">WHMCS Linked Email</label>
                                                    <input type="text" class="uk-input" name="whmcsEmail" value="{{ whmcsUser.email }}">
                                                    <input type="text" class="uk-input" name="do" value="deactivateWHMCS" style="display: none;">
                                                </div>
                                                <div class="uk-width-1-1">

                                                </div>
                                            </div>
                                        </div>
                                        <p class="uk-text-right">
                                            <button class="uk-button uk-button-primary" style="float: left;" type="submit">Deactivate</button>
                                        </p>
                                </div>

                                </form>

                                            {% else %}
                                <form action="" method="post">
                                    <div>
                                        <div class="uk-grid">
                                            <div class="uk-width-1-1">
                                                <p>You have NOT linked your WHMCS account <i>WE DO NOT STORE YOUR WHMCS PASSWORD</i></p>
                                                <label for="currentPassword">WHMCS Email</label>
                                                <input type="text" class="uk-input" name="whmcsEmail" value="{{ whmcsUser.email }}">
                                                <input type="text" class="uk-input" name="do" value="activateWHMCS" style="display: none;">
                                            </div>
                                            <div class="uk-width-1-1">

                                                <label for="currentPassword">WHMCS Password</label>
                                                <input type="password" class="uk-input" name="whmcsPassword" value="">
                                            </div>
                                        </div>
                                    </div>
                                    <p class="uk-text-right">
                                        <button class="uk-button uk-button-primary" style="float: left;" type="submit">Activate</button>
                                    </p>
                            </div>

                        </form>

                                        {% endif %}


                                    {% else %}

                                    WHMCS Integration is not enabled on this install.

                                    {% endif %}
                                </div>
                                <p class="uk-text-right">
                                </p>
                            </div>

                        </form>


                    </div>
                </div>


    </div>
{% endblock %}
