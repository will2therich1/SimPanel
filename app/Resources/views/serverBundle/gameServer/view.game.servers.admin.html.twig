{% extends 'admin.base.html.twig' %}


{% block body %}

    <div class="container-fluid">
        <div class="row">
            {% if success %}
                <div class="alert alert-success">{{ success }}</div>
            {% endif %}

            {% if error %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endif %}
            <div class="col-lg-12">
                <div class="block">
                    <div class="title"><strong class="d-block">Search Game Servers</strong><span class="d-block">Search for Game Servers</span></div>
                    <div class="block-body">
                        <form class="form-horizontal" method='get' action=''>
                            <div class="form-group row">
                            <label class="col-sm-3 form-control-label">Name</label>
                            <div class="col-sm-9">
                                <input id="inputHorizontalSuccess" type="text" name='name' placeholder="Name" class="form-control form-control-success"><small class="form-text"></small>
                            </div>
                    </div>
                    <div class="form-group row">
                    <label class="col-sm-3 form-control-label">ID</label>
                    <div class="col-sm-9">
                        <input id="inputHorizontalWarning" type="text" name='id' placeholder="ID" class="form-control form-control-warning"><small class="form-text"></small>
                    </div>
                </div>
                <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Search" class="btn btn-primary">
            </div>
        </div>
        </form>
    </div>
    </div>
    </div>
    <hr>
    <div class="col-lg-12">
        <div class="block">
            <div class="content table-responsive table-full-width">
            <table style='color: white' class="table table-striped table-hover">
            <thead>
                <th>ID</th>
                <th>Name</th>
                <th>Owner</th>
                <th>Status</th>
                <th>Full IP</th>
                <th>Template</th>
                <th>Edit</th>
            </thead>
            <tbody>
            {% for server in server.gameServer %}
            <tr>
                    <th scope="row">{{ server.id|e }}</th>
                    <th>{{ server.serverName|e }}</th>
                    <th>{{ server.owner.username|e }}</th>
                    <th>{{ server.staus|e }}</th>
                    <th>{{ server.fullIp|e }}</th>
                    <th><a href='./templates/{{ server.templateId|e }}'>{{ server.templateId|e }}</a></th>
                    <th><a href='./network/{{ server.id|e }}'>Edit</a></th>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        </div>
    </div>
    </div>
    </div>
    <hr>

    <div class='button-bar'>
        <a href="{{ path('GameServerList') }}" class='button prev'>First Page</a>&nbsp;&nbsp;&nbsp;&nbsp
        <a href='{{ pages.lastlink }}' class='button prev'>Previous</a>
        <a href='{{ pages.nextlink }}' class='button next'>Next</a>
    </div>
            {% endblock %}
