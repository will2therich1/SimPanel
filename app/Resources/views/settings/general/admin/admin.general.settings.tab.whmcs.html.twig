{% extends '/settings/general/admin/admin.general.settings.base.html.twig' %}


{% block tabcontent %}



        <div class="row">
            <div class="col-md-12">
                <p>WHMCS Integration settings</p>
                <hr>
            </div>
        </div>
        <div class="row" >
            <div class="col-md-12" >
                <div class="form-group" >
                    <i> DETAILS HERE ARE NOT EDITABLE HERE! To edit open the /app/config/parameters.yml file </i>
                    <label for="WHMCSStatus">WHMCS Integration status: {% if whmcsParameters.whmcs_status == 1 %} Enabled {% else %} Disabled {% endif %}</label >
                </div >
            </div >

        </div >
        {#New Row#}
        <div class="row">
            <div class="col-md-6" >
                <div class="form-group" >
                    <label >Identifier</label >
                    <input type="text" required id="name" readonly class="form-control" placeholder="" name='whmcsIdentifier' value="{{ whmcsParameters.whmcs_identifier }}" >
                </div >
            </div >
            <div class="col-md-6" >
                <div class="form-group" >
                    <label >Secret</label >
                    <input type = "text" required  class="form-control" readonly placeholder="" name='whmcsSecret' value="{{ whmcsParameters.whmcs_secret }}" >
                </div >

            </div >
        </div>
        <div class="row">
            <div class="col-md-12">
                <label >WHMCS Url</label >
                <input type = "text" required  class="form-control" readonly placeholder="" name='whmcsUrl' value="{{ whmcsParameters.whmcs_url }}" >
            </div>
        </div>

        <button style="margin-top: 10px" type = "submit" class="btn btn-info btn-fill pull-right" ><a href="{{ path('GeneralAdminSettingsWhmcsTest') }}">Test Connection Status</a> </button >
        <div class="clearfix" ></div >

{% endblock %}