{% extends 'admin.base.html.twig' %}


{% block body %}
    <div class="container-fluid">
    {% if success is defined %}
        {% if success != '' %}
            <div class="alert alert-success">{{ success }}</div>
        {% endif %}
    {% endif %}

    {% if error is defined %}
        {% if error != '' %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}
    {% endif %}

    <div class="row">
        <div class="col-lg-12">
            <div class="block">
                <div class="title"><strong class="d-block">Creating a new admin.
                </div>
                <div class="block-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <hr>
{% endblock %}